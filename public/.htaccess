# =============================================================================
# SKICKABLOMMA.SE - Apache .htaccess
# =============================================================================
# Denna fil hanterar redirects, caching och säkerhet på Websupport
# Ladda upp till public_html/ tillsammans med övriga filer
# =============================================================================

# Aktivera RewriteEngine
RewriteEngine On
RewriteBase /

# =============================================================================
# HTTPS Redirect (avkommentera om SSL är aktiverat)
# =============================================================================
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# =============================================================================
# WWW Redirect (välj EN av dessa)
# =============================================================================
# Redirect www till non-www
RewriteCond %{HTTP_HOST} ^www\.skickablomma\.se [NC]
RewriteRule ^(.*)$ https://skickablomma.se/$1 [L,R=301]

# ELLER: Redirect non-www till www (avkommentera vid behov)
# RewriteCond %{HTTP_HOST} ^skickablomma\.se [NC]
# RewriteRule ^(.*)$ https://www.skickablomma.se/$1 [L,R=301]

# =============================================================================
# LEGACY REDIRECTS (gamla URL:er till nya)
# =============================================================================
Redirect 301 /blommor /buketter/
Redirect 301 /blomsterbud /samma-dag-leverans/
Redirect 301 /flowers /buketter/
Redirect 301 /order /buketter/

# =============================================================================
# CACHE CONTROL (förbättrar laddningstider)
# =============================================================================
<IfModule mod_expires.c>
    ExpiresActive On

    # Bilder - lång cache (1 år)
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/avif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # CSS och JavaScript - 1 månad (för uppdateringar)
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"

    # Fonts - 1 år
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"

    # HTML - kort cache (1 timme)
    ExpiresByType text/html "access plus 1 hour"

    # Default
    ExpiresDefault "access plus 1 week"
</IfModule>

# =============================================================================
# GZIP KOMPRIMERING (minskar filstorlekar)
# =============================================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE text/xml
</IfModule>

# =============================================================================
# SÄKERHET
# =============================================================================
# Dölj serverinformation
ServerSignature Off

# Förhindra directory listing
Options -Indexes

# Skydda känsliga filer
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Blockera åtkomst till backup-filer
<FilesMatch "(^#.*#|\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|swp)|~)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Säkerhetshuvuden
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# =============================================================================
# CUSTOM 404 (valfritt)
# =============================================================================
ErrorDocument 404 /404.html

# =============================================================================
# SPA FALLBACK (om du har client-side routing)
# =============================================================================
# Omdirigera alla requests till index.html om filen inte finns
# RewriteCond %{REQUEST_FILENAME} !-f
# RewriteCond %{REQUEST_FILENAME} !-d
# RewriteRule . /index.html [L]
